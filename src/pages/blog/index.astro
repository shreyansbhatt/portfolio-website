---
import Layout from '@/layouts/Layout.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../../keystatic.config';
import { generateBreadcrumbJsonLd } from '@/lib/utils';

export const prerender = true;

const reader = createReader(process.cwd(), keystaticConfig);
const profile = await reader.singletons.profile.read();
const blogsData = await reader.collections.blogs.all();

// Filter published blogs and sort by date
const blogs = blogsData
  .filter((b) => b.entry.status === 'published')
  .map((b) => ({
    slug: b.slug,
    ...b.entry,
  }))
  .sort((a, b) => new Date(b.publishDate).getTime() - new Date(a.publishDate).getTime());

// Group by category
const categories = ['AI Engineering', 'Offensive Security', 'System Design', 'Leadership'] as const;
const blogsByCategory = categories.map((cat) => ({
  category: cat,
  posts: blogs.filter((b) => b.category === cat),
})).filter((c) => c.posts.length > 0);

// Breadcrumb JSON-LD
const breadcrumbJsonLd = generateBreadcrumbJsonLd([
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' },
]);
---

<Layout
  title="Blog"
  description="Insights on AI Engineering, Offensive Security, System Design, and Technical Leadership from a Principal Solution Architect."
  profile={profile}
  additionalJsonLd={breadcrumbJsonLd}
  canonicalUrl="/blog"
>
  <section class="section">
    <div class="container">
      <!-- Header -->
      <div class="text-center mb-16 space-y-4">
        <p class="text-terminal text-cyan-glow text-sm uppercase tracking-wider">
          <span class="text-text-muted">//</span> Thought Leadership
        </p>
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary">
          Blog
        </h1>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Deep dives into architecture patterns, security strategies, and lessons learned from 16+ years in enterprise tech.
        </p>
      </div>
      
      <!-- Category Filters -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        <button 
          class="category-filter active px-4 py-2 rounded-full text-sm font-medium transition-all"
          data-category="all"
        >
          All Posts
        </button>
        {categories.map((cat) => (
          <button 
            class="category-filter px-4 py-2 rounded-full text-sm font-medium transition-all"
            data-category={cat}
          >
            {cat}
          </button>
        ))}
      </div>
      
      <!-- Blog Grid -->
      {blogs.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="blog-grid">
          {blogs.map((post) => (
            <article 
              class="blog-card card card-cyber group"
              data-category={post.category}
            >
              {/* Cover Image */}
              {post.coverImage && (
                <div class="relative -m-6 mb-4 overflow-hidden rounded-t-lg">
                  <img
                    src={post.coverImage}
                    alt={post.title}
                    class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                    decoding="async"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-depths/80 to-transparent"></div>
                </div>
              )}
              
              {/* Meta */}
              <div class="flex items-center gap-3 mb-3">
                <span class={`px-2 py-1 text-xs rounded ${
                  post.category === 'Offensive Security' 
                    ? 'bg-crimson-muted text-crimson' 
                    : 'bg-cyan-muted text-cyan-glow'
                }`}>
                  {post.category}
                </span>
                <time class="text-xs text-text-muted">
                  {new Date(post.publishDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                  })}
                </time>
              </div>
              
              {/* Title */}
              <h2 class="text-xl font-semibold text-text-primary mb-2 group-hover:text-cyan-glow transition-colors line-clamp-2">
                <a href={`/blog/${post.slug}`} class="hover:underline">
                  {post.title}
                </a>
              </h2>
              
              {/* Description */}
              <p class="text-text-secondary text-sm line-clamp-3 mb-4">
                {post.seoDescription}
              </p>
              
              {/* Tags */}
              {post.tags && post.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-auto">
                  {post.tags.slice(0, 3).map((tag) => (
                    <span class="text-xs text-text-muted">
                      #{tag}
                    </span>
                  ))}
                </div>
              )}
              
              {/* Read More */}
              <a 
                href={`/blog/${post.slug}`}
                class="inline-flex items-center gap-2 mt-4 text-sm text-cyan-glow hover:text-cyan-dim transition-colors"
              >
                Read More
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-16">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-depths flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-text-primary mb-2">No Posts Yet</h3>
          <p class="text-text-secondary">
            Blog posts are coming soon. Check back later!
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .category-filter {
    background: var(--color-depths);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-surface);
  }
  
  .category-filter:hover {
    border-color: var(--color-cyan-glow);
    color: var(--color-cyan-glow);
  }
  
  .category-filter.active {
    background: var(--color-cyan-glow);
    color: var(--color-abyss);
    border-color: var(--color-cyan-glow);
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  const filters = document.querySelectorAll('.category-filter');
  const cards = document.querySelectorAll('.blog-card');
  
  filters.forEach((filter) => {
    filter.addEventListener('click', () => {
      // Update active state
      filters.forEach((f) => f.classList.remove('active'));
      filter.classList.add('active');
      
      const category = filter.getAttribute('data-category');
      
      // Filter cards
      cards.forEach((card) => {
        if (category === 'all' || card.getAttribute('data-category') === category) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>
