---
import Layout from '@/layouts/Layout.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../../keystatic.config';
import { generateBlogPostJsonLd, generateBreadcrumbJsonLd } from '@/lib/utils';

export const prerender = true;

export async function getStaticPaths() {
  const reader = createReader(process.cwd(), keystaticConfig);
  const blogs = await reader.collections.blogs.all();
  
  return blogs
    .filter((b) => b.entry.status === 'published')
    .map((blog) => ({
      params: { slug: blog.slug },
      props: { blog: { slug: blog.slug, ...blog.entry } },
    }));
}

const { blog } = Astro.props;
const reader = createReader(process.cwd(), keystaticConfig);
const profile = await reader.singletons.profile.read();

// Render MDX content
const content = await blog.content?.();

// Generate JSON-LD
const blogJsonLd = generateBlogPostJsonLd(blog, profile?.name || 'Shreyans Bhatt');
const breadcrumbJsonLd = generateBreadcrumbJsonLd([
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' },
  { name: blog.title, url: `/blog/${blog.slug}` },
]);
---

<Layout
  title={blog.title}
  description={blog.seoDescription}
  profile={profile}
  ogImage={blog.coverImage}
  canonicalUrl={`/blog/${blog.slug}`}
  additionalJsonLd={{ ...blogJsonLd, ...breadcrumbJsonLd }}
>
  <article class="section">
    <div class="container max-w-4xl">
      <!-- Back Link -->
      <a 
        href="/blog"
        class="inline-flex items-center gap-2 text-text-muted hover:text-cyan-glow transition-colors mb-8"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        Back to Blog
      </a>
      
      <!-- Header -->
      <header class="mb-12">
        {/* Category & Date */}
        <div class="flex items-center gap-4 mb-6">
          <span class={`px-3 py-1 text-sm rounded ${
            blog.category === 'Offensive Security' 
              ? 'bg-crimson-muted text-crimson' 
              : 'bg-cyan-muted text-cyan-glow'
          }`}>
            {blog.category}
          </span>
          <time class="text-text-muted text-sm">
            {new Date(blog.publishDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          {blog.updatedDate && blog.updatedDate !== blog.publishDate && (
            <span class="text-text-muted text-sm">
              (Updated: {new Date(blog.updatedDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              })})
            </span>
          )}
        </div>
        
        {/* Title */}
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-6 leading-tight">
          {blog.title}
        </h1>
        
        {/* Description */}
        <p class="text-xl text-text-secondary mb-8">
          {blog.seoDescription}
        </p>
        
        {/* Author */}
        <div class="flex items-center gap-4 pb-8 border-b border-surface">
          {profile?.avatarImage && (
            <img
              src={profile.avatarImage}
              alt={profile.name}
              class="w-12 h-12 rounded-full"
            />
          )}
          <div>
            <p class="font-medium text-text-primary">{profile?.name || 'Shreyans Bhatt'}</p>
            <p class="text-sm text-text-secondary">{profile?.title || 'Solution Architect'}</p>
          </div>
        </div>
      </header>
      
      {/* Cover Image */}
      {blog.coverImage && (
        <figure class="mb-12 -mx-4 md:-mx-8 lg:-mx-16">
          <img
            src={blog.coverImage}
            alt={blog.title}
            class="w-full rounded-xl shadow-lg"
          />
        </figure>
      )}
      
      {/* Series Navigation */}
      {blog.series && blog.series.discriminant && (
        <div class="mb-8 p-4 rounded-lg bg-depths border border-surface">
          <p class="text-sm text-text-muted mb-1">Part of a series</p>
          <p class="font-medium text-cyan-glow">
            {blog.series.value.seriesName} — Part {blog.series.value.partNumber}
          </p>
        </div>
      )}
      
      {/* Content */}
      <div class="prose prose-lg max-w-none">
        {content}
      </div>
      
      {/* Tags */}
      {blog.tags && blog.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-surface">
          <p class="text-sm text-text-muted mb-3">Tagged with:</p>
          <div class="flex flex-wrap gap-2">
            {blog.tags.map((tag: string) => (
              <span class="px-3 py-1 text-sm rounded-full bg-surface text-text-secondary">
                #{tag}
              </span>
            ))}
          </div>
        </div>
      )}
      
      {/* Share / Actions */}
      <div class="mt-12 pt-8 border-t border-surface flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <span class="text-text-muted text-sm">Share:</span>
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(blog.title)}&url=${encodeURIComponent(`https://shreyansbhatt.com/blog/${blog.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-muted hover:text-cyan-glow transition-colors"
            aria-label="Share on Twitter"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a 
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://shreyansbhatt.com/blog/${blog.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-muted hover:text-cyan-glow transition-colors"
            aria-label="Share on LinkedIn"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
        
        <a href="/blog" class="btn btn-ghost">
          ← More Articles
        </a>
      </div>
    </div>
  </article>
</Layout>
