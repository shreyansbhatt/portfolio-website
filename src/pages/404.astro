---
import Layout from '@/layouts/Layout.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';

const reader = createReader(process.cwd(), keystaticConfig);
const profile = await reader.singletons.profile.read();
---

<Layout 
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
  profile={profile}
  noIndex={true}
>
  <section class="section min-h-[60vh] flex items-center justify-center">
    <div class="container text-center">
      <!-- Glitch Effect Title -->
      <div class="relative mb-8">
        <h1 class="text-[10rem] md:text-[15rem] font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-glow to-crimson leading-none">
          404
        </h1>
        <div class="absolute inset-0 text-[10rem] md:text-[15rem] font-bold text-cyan-glow/10 animate-pulse leading-none">
          404
        </div>
      </div>
      
      <!-- Terminal Message -->
      <div class="max-w-lg mx-auto mb-8">
        <div class="bg-void border border-surface rounded-lg p-6 text-left font-mono text-sm">
          <p class="text-text-muted mb-2">
            <span class="text-cyan-glow">$</span> find /page --name "requested"
          </p>
          <p class="text-crimson mb-4">
            Error: No matches found. The path you requested does not exist in this system.
          </p>
          <p class="text-text-muted">
            <span class="text-cyan-glow">$</span> <span class="animate-pulse">_</span>
          </p>
        </div>
      </div>
      
      <!-- Message -->
      <p class="text-text-secondary mb-8 max-w-md mx-auto">
        Looks like this route wasn't found in the architecture. Let's get you back on track.
      </p>
      
      <!-- Actions -->
      <div class="flex flex-wrap items-center justify-center gap-4">
        <a href="/" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Back to Home
        </a>
        <a href="/blog" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          Read Blog
        </a>
      </div>
    </div>
  </section>
</Layout>
