---
import type { Profile } from '@/lib/schemas';
import { obfuscateEmail } from '@/lib/utils';

interface Props {
  profile?: Profile;
}

const { profile } = Astro.props;
const obfuscatedEmail = profile ? obfuscateEmail(profile.email) : null;
---

<!-- Contact Modal -->
<div 
  id="contact-modal"
  class="fixed inset-0 z-modal hidden"
  role="dialog"
  aria-modal="true"
  aria-labelledby="contact-modal-title"
>
  <!-- Backdrop -->
  <div 
    id="contact-backdrop"
    class="absolute inset-0 bg-void/80 backdrop-blur-sm"
    aria-hidden="true"
  ></div>
  
  <!-- Modal Content -->
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <div 
      class="relative w-full max-w-lg bg-depths border border-surface rounded-xl shadow-2xl"
      role="document"
    >
      <!-- Close Button -->
      <button
        id="contact-close"
        class="absolute top-4 right-4 p-2 text-text-muted hover:text-text-primary transition-colors"
        aria-label="Close modal"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      
      <!-- Header -->
      <div class="p-6 border-b border-surface">
        <h2 id="contact-modal-title" class="text-2xl font-bold text-text-primary">
          Get in Touch
        </h2>
        <p class="text-text-secondary mt-1">
          Let's discuss your next project or opportunity.
        </p>
      </div>
      
      <!-- Body -->
      <div class="p-6 space-y-6">
        <!-- Quick Contact Options -->
        <div class="grid grid-cols-2 gap-4">
          {obfuscatedEmail && (
            <a 
              href="#"
              data-email={obfuscatedEmail}
              class="flex flex-col items-center gap-2 p-4 rounded-lg bg-surface/50 hover:bg-surface transition-colors group"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-glow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-sm text-text-secondary group-hover:text-text-primary transition-colors">Email</span>
            </a>
          )}
          
          {profile?.socialLinks?.linkedin && (
            <a 
              href={profile.socialLinks.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="flex flex-col items-center gap-2 p-4 rounded-lg bg-surface/50 hover:bg-surface transition-colors group"
            >
              <svg class="h-6 w-6 text-cyan-glow" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              <span class="text-sm text-text-secondary group-hover:text-text-primary transition-colors">LinkedIn</span>
            </a>
          )}
        </div>
        
        <!-- Divider -->
        <div class="flex items-center gap-4">
          <div class="flex-1 h-px bg-surface"></div>
          <span class="text-xs text-text-muted uppercase tracking-wider">or send a message</span>
          <div class="flex-1 h-px bg-surface"></div>
        </div>
        
        <!-- Contact Form -->
        <form id="contact-form" class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="contact-name" class="block text-sm text-text-secondary mb-1">Name</label>
              <input
                type="text"
                id="contact-name"
                name="name"
                required
                class="w-full px-4 py-2 rounded-lg bg-void border border-surface text-text-primary placeholder-text-muted focus:border-cyan-glow focus:ring-1 focus:ring-cyan-glow outline-none transition-colors"
                placeholder="John Doe"
              />
            </div>
            <div>
              <label for="contact-email" class="block text-sm text-text-secondary mb-1">Email</label>
              <input
                type="email"
                id="contact-email"
                name="email"
                required
                class="w-full px-4 py-2 rounded-lg bg-void border border-surface text-text-primary placeholder-text-muted focus:border-cyan-glow focus:ring-1 focus:ring-cyan-glow outline-none transition-colors"
                placeholder="john@company.com"
              />
            </div>
          </div>
          
          <div>
            <label for="contact-subject" class="block text-sm text-text-secondary mb-1">Subject</label>
            <select
              id="contact-subject"
              name="subject"
              required
              class="w-full px-4 py-2 rounded-lg bg-void border border-surface text-text-primary focus:border-cyan-glow focus:ring-1 focus:ring-cyan-glow outline-none transition-colors"
            >
              <option value="">Select a topic...</option>
              <option value="full-time">Full-time Opportunity</option>
              <option value="contract">Contract Engagement</option>
              <option value="consulting">Technical Consulting</option>
              <option value="advisory">Advisory Role</option>
              <option value="collaboration">Collaboration</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="contact-message" class="block text-sm text-text-secondary mb-1">Message</label>
            <textarea
              id="contact-message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-2 rounded-lg bg-void border border-surface text-text-primary placeholder-text-muted focus:border-cyan-glow focus:ring-1 focus:ring-cyan-glow outline-none transition-colors resize-none"
              placeholder="Tell me about your project or opportunity..."
            ></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary w-full justify-center">
            <span>Send Message</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
          </button>
        </form>
        
        <!-- Note -->
        <p class="text-xs text-text-muted text-center">
          Your message will be sent directly. I typically respond within 24-48 hours.
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('contact-modal');
  const backdrop = document.getElementById('contact-backdrop');
  const closeBtn = document.getElementById('contact-close');
  const contactTrigger = document.getElementById('contact-trigger');
  const form = document.getElementById('contact-form') as HTMLFormElement;
  
  function openModal() {
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }
  
  function closeModal() {
    modal?.classList.add('hidden');
    document.body.style.overflow = '';
  }
  
  contactTrigger?.addEventListener('click', openModal);
  closeBtn?.addEventListener('click', closeModal);
  backdrop?.addEventListener('click', closeModal);
  
  // Close on Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal();
    }
  });
  
  // Form submission (placeholder - would connect to serverless function)
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    // TODO: Send to API endpoint
    console.log('Form submitted:', data);
    
    // Show success (placeholder)
    alert('Message sent! (This is a placeholder - integrate with your backend)');
    form.reset();
    closeModal();
  });
</script>
