---
import type { Profile } from '@/lib/schemas';
import { obfuscateEmail } from '@/lib/utils';

interface Props {
  profile?: Profile;
}

const { profile } = Astro.props;
const currentYear = new Date().getFullYear();
const obfuscatedEmail = profile ? obfuscateEmail(profile.email) : null;
---

<footer class="border-t border-surface bg-void/50">
  <div class="container py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand Column -->
      <div class="space-y-4">
        <div class="text-terminal text-xl font-semibold">
          <span class="text-cyan-glow">&lt;</span>
          <span class="text-text-primary">{profile?.name || 'Portfolio'}</span>
          <span class="text-cyan-glow">/&gt;</span>
        </div>
        <p class="text-text-muted text-sm max-w-xs">
          {profile?.tagline || 'Building the future at the confluence of AI, Offensive Cybersecurity, and Enterprise Architecture.'}
        </p>
        
        <!-- Social Links -->
        {profile?.socialLinks && (
          <div class="flex items-center gap-4 pt-2">
            {profile.socialLinks.linkedin && (
              <a 
                href={profile.socialLinks.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-muted hover:text-cyan-glow transition-colors"
                aria-label="LinkedIn Profile"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {profile.socialLinks.github && (
              <a 
                href={profile.socialLinks.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-muted hover:text-cyan-glow transition-colors"
                aria-label="GitHub Profile"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
            {profile.socialLinks.twitter && (
              <a 
                href={profile.socialLinks.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-muted hover:text-cyan-glow transition-colors"
                aria-label="Twitter/X Profile"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            )}
            {profile.socialLinks.medium && (
              <a 
                href={profile.socialLinks.medium}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-muted hover:text-cyan-glow transition-colors"
                aria-label="Medium Profile"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z"/>
                </svg>
              </a>
            )}
          </div>
        )}
      </div>
      
      <!-- Quick Links Column -->
      <div class="space-y-4">
        <h4 class="text-terminal text-cyan-glow font-semibold text-sm uppercase tracking-wider">
          Quick Links
        </h4>
        <nav class="flex flex-col gap-2">
          <a href="/#experience" class="text-text-muted hover:text-cyan-glow transition-colors text-sm">
            Experience
          </a>
          <a href="/#skills" class="text-text-muted hover:text-cyan-glow transition-colors text-sm">
            Skills
          </a>
          <a href="/#testimonials" class="text-text-muted hover:text-cyan-glow transition-colors text-sm">
            Testimonials
          </a>
          <a href="/blog" class="text-text-muted hover:text-cyan-glow transition-colors text-sm">
            Blog
          </a>
        </nav>
      </div>
      
      <!-- Contact Column -->
      <div class="space-y-4">
        <h4 class="text-terminal text-cyan-glow font-semibold text-sm uppercase tracking-wider">
          Get in Touch
        </h4>
        <div class="space-y-2 text-sm">
          {obfuscatedEmail && (
            <a 
              href="#"
              data-email={obfuscatedEmail}
              class="flex items-center gap-2 text-text-muted hover:text-cyan-glow transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>{obfuscatedEmail}</span>
            </a>
          )}
          {profile?.location && (
            <div class="flex items-center gap-2 text-text-muted">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{profile.location}</span>
            </div>
          )}
          {profile?.timezone && (
            <div class="flex items-center gap-2 text-text-muted">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{profile.timezone}</span>
            </div>
          )}
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-surface flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-text-muted text-sm">
        &copy; {currentYear} {profile?.name || 'Portfolio'}. Architected with precision.
      </p>
      <!-- <div class="flex items-center gap-4 text-text-muted text-xs">
        <span class="text-terminal">
          <span class="text-cyan-glow">$</span> built with astro + keystatic
        </span>
        <span class="text-surface">|</span>
        <span class="text-terminal">
          <span class="text-crimson">âš¡</span> deployed on cloudflare
        </span>
      </div> -->
    </div>
  </div>
</footer>
