---
import type { Project } from '@/lib/schemas';
import { aggregateSkills } from '@/lib/utils';

interface Props {
  id?: string;
  projects: Project[];
}

const { id, projects } = Astro.props;

// Aggregate skills from all projects
const aggregatedSkills = aggregateSkills(projects);

// Categorize skills
const skillCategories = {
  'Architecture & Design': ['Solution Architecture', 'System Design', 'Architecture', 'C4', 'Microservices', 'DDD', 'CQRS', 'Event-Driven', 'Domain Driven', 'API', 'Database Design', 'Technical Architecture'],
  'Backend & Languages': ['C#', '.NET', 'Python', 'Go', 'TypeScript', 'EF Core', 'Entity Framework', 'gRPC', 'REST', 'ASP.NET'],
  'Cloud & DevOps': ['Azure', 'AWS', 'Docker', 'Kubernetes', 'CI/CD', 'Jenkins', 'Azure DevOps', 'Terraform', 'CloudBees', 'GitHub Actions'],
  'AI & Machine Learning': ['Machine Learning', 'NLP', 'TensorFlow', 'XGBoost', 'Supervised', 'Neural Networks', 'ONNX', 'ML', 'Python ML', 'LightGBM'],
  'Security & Compliance': ['OWASP', 'IM8', 'CEH', 'Security', 'Zero Trust', 'HMAC', 'JWT', 'Encryption', 'Cryptography'],
  'Data & Databases': ['SQL Server', 'PostgreSQL', 'MongoDB', 'Redis', 'CosmosDB', 'Kafka', 'Event Hubs', 'TimescaleDB'],
};

// Group aggregated skills by category
const categorizedSkills = Object.entries(skillCategories).map(([category, keywords]) => {
  const skills = aggregatedSkills.filter((skill) => 
    keywords.some((kw) => skill.name.toLowerCase().includes(kw.toLowerCase()))
  );
  return { category, skills };
}).filter((cat) => cat.skills.length > 0);

// Get top skills overall (top 9 for 3x3 grid)
const topSkills = aggregatedSkills.slice(0, 9);

// Helper to get bar color based on rating
function getBarColor(rating: number): string {
  if (rating >= 9) return 'bg-cyan-glow';
  if (rating >= 7) return 'bg-cyan-dim';
  if (rating >= 5) return 'bg-amber-500';
  return 'bg-crimson';
}
---

<section id={id} class="section">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center mb-16 space-y-4">
      <p class="text-cyan-glow text-sm font-mono uppercase tracking-wider">
        // Technical Arsenal
      </p>
      <h2 class="text-4xl md:text-5xl font-bold text-text-primary">
        Skills & Expertise
      </h2>
      <p class="text-text-secondary max-w-2xl mx-auto">
        Aggregated proficiency across 16+ years. Ratings reflect maximum depth achieved across projects.
      </p>
    </div>
    
    <!-- Top Skills Grid -->
    <details class="mb-12 group" open>
      <summary class="flex items-center gap-3 text-xl font-semibold text-text-primary mb-6 cursor-pointer list-none select-none">
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-5 w-5 text-cyan-glow transition-transform group-open:rotate-90" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        Top Competencies
        <span class="text-sm font-normal text-text-muted">({topSkills.length})</span>
      </summary>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {topSkills.map((skill, index) => {
          const percentage = skill.maxRating * 10;
          return (
            <div class="p-5 rounded-xl bg-depths border border-surface hover:border-cyan-glow/50 transition-all group/card">
              <div class="flex items-start justify-between gap-4 mb-4">
                <div class="flex items-center gap-3">
                  <span class="text-3xl font-bold text-cyan-glow/30 font-mono">
                    {String(index + 1).padStart(2, '0')}
                  </span>
                  <h4 class="text-text-primary font-medium group-hover/card:text-cyan-glow transition-colors">
                    {skill.name}
                  </h4>
                </div>
                <div class="text-right shrink-0">
                  <span class="text-2xl font-bold text-cyan-glow font-mono">{skill.maxRating}</span>
                  <span class="text-text-muted text-sm">/10</span>
                </div>
              </div>
              
              {/* Progress Bar */}
              <div class="h-2 bg-surface rounded-full overflow-hidden mb-2">
                <div 
                  class={`h-full rounded-full transition-all duration-700 ${getBarColor(skill.maxRating)}`}
                  style={`width: ${percentage}%`}
                ></div>
              </div>
              
              <p class="text-xs text-text-muted">
                Applied in {skill.projectCount} project{skill.projectCount > 1 ? 's' : ''}
              </p>
            </div>
          );
        })}
      </div>
    </details>
    
    <!-- Categorized Skills -->
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-text-primary mb-4">Skills by Category</h3>
      
      {categorizedSkills.map(({ category, skills }) => (
        <details class="group bg-depths border border-surface rounded-xl overflow-hidden">
          <summary class="flex items-center justify-between gap-4 p-4 cursor-pointer list-none select-none hover:bg-surface/50 transition-colors">
            <div class="flex items-center gap-3">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class={`h-5 w-5 transition-transform group-open:rotate-90 ${category.includes('Security') ? 'text-crimson' : 'text-cyan-glow'}`}
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              <span class="font-medium text-text-primary">{category}</span>
              <span class="text-sm text-text-muted">({skills.length} skills)</span>
            </div>
            
            {/* Mini preview of top skills in this category */}
            <div class="hidden sm:flex items-center gap-2">
              {skills.slice(0, 3).map((s) => (
                <span class="px-2 py-0.5 text-xs rounded bg-surface text-text-muted">
                  {s.name.split(' ')[0]}
                </span>
              ))}
              {skills.length > 3 && (
                <span class="text-xs text-text-muted">+{skills.length - 3}</span>
              )}
            </div>
          </summary>
          
          <div class="p-4 pt-0 border-t border-surface mt-0">
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 pt-4">
              {skills.map((skill) => {
                const percentage = skill.maxRating * 10;
                return (
                  <div class="p-3 rounded-lg bg-void border border-surface hover:border-cyan-glow/30 transition-colors">
                    <div class="flex items-center justify-between gap-2 mb-2">
                      <span class="text-sm text-text-secondary truncate">
                        {skill.name}
                      </span>
                      <span class="text-xs font-mono text-cyan-glow shrink-0">
                        {skill.maxRating}
                      </span>
                    </div>
                    <div class="h-1 bg-surface rounded-full overflow-hidden">
                      <div 
                        class={`h-full rounded-full ${getBarColor(skill.maxRating)}`}
                        style={`width: ${percentage}%`}
                      ></div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </details>
      ))}
    </div>
    
    <!-- Legend -->
    <div class="mt-12 flex flex-wrap items-center justify-center gap-6 text-sm text-text-muted p-4 rounded-xl bg-depths border border-surface">
      <span class="font-medium text-text-secondary">Proficiency Scale:</span>
      <div class="flex items-center gap-2">
        <div class="w-4 h-2 rounded bg-crimson"></div>
        <span>1-4 Basic</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-4 h-2 rounded bg-amber-500"></div>
        <span>5-6 Intermediate</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-4 h-2 rounded bg-cyan-dim"></div>
        <span>7-8 Advanced</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-4 h-2 rounded bg-cyan-glow shadow-sm shadow-cyan-glow"></div>
        <span>9-10 Expert</span>
      </div>
    </div>
    
    <!-- Certifications -->
    <div class="mt-12 grid md:grid-cols-2 gap-6">
      <div class="p-6 rounded-xl bg-gradient-to-br from-crimson/10 to-transparent border border-crimson/30">
        <div class="flex items-center gap-4">
          <div class="w-14 h-14 rounded-full bg-crimson/20 flex items-center justify-center shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-crimson" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div>
            <h4 class="text-lg font-semibold text-text-primary">Certified Ethical Hacker (CEH)</h4>
            <p class="text-text-muted text-sm">EC-Council • ECC0235961487</p>
          </div>
        </div>
      </div>
      
      <div class="p-6 rounded-xl bg-gradient-to-br from-cyan-glow/10 to-transparent border border-cyan-glow/30">
        <div class="flex items-center gap-4">
          <div class="w-14 h-14 rounded-full bg-cyan-glow/20 flex items-center justify-center shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-cyan-glow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <div>
            <h4 class="text-lg font-semibold text-text-primary">ML Specialization</h4>
            <p class="text-text-muted text-sm">Stanford + DeepLearning.AI • Coursera</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
